<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Log In</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="js-error-block-login" class="alert alert-danger" style="display:none;">
        <ul></ul>
      </div>
      <div class="modal-body">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), remote: true, :html => { :id => "ajax_signin"}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div><%= f.label :email %><br />
            <%= f.email_field :email, :autofocus => true %>
          </div>

          <div>
            <%= f.label :password %><br />
            <%= f.password_field :password %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "Sign in", :class => 'btn btn-small btn-success', id: "ajax_form" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= link_to "Sign up", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-small btn-success' %>
      </div>
    </div>
  </div>
</div>
